{
  "description": "Migration safety check hook",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write|Bash",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/migration-check.sh",
            "timeout": 30
          }
        ]
      }
    ]
  }
}
